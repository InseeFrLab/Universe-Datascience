{
    "id": "{{service.name}}",
    "cpus": {{service.cpus}},
    "mem":  {{service.mem}},
    "instances":1,
    "cmd": "chown root:users $MESOS_SANDBOX && chmod 775 $MESOS_SANDBOX {{#advanced.jupyter_lab}} start.sh jupyter-lab {{/advanced.jupyter_lab}} {{^advanced.jupyter_lab}} start-notebook.sh {{/advanced.jupyter_lab}} {{#advanced.security_token.enable}} --NotebookApp.token='{{advanced.security_token.token}}'{{/advanced.security_token.enable}} {{^advanced.security_token.enable}} --NotebookApp.token=''{{/advanced.security_token.enable}},
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{resource.assets.container.docker.jupyter}}",
            "portMappings": [
                { "containerPort": 8888 , "name": "jupyter"}
            ]
        }
    },
    "networks": [
      {
        "name": "dcos",
        "mode": "container"
      }
    ],
    "healthChecks": [{
        "protocol": "MESOS_TCP",
        "gracePeriodSeconds": 300,
        "intervalSeconds": 60,
        "portIndex": 0,
        "timeoutSeconds": 15,
        "maxConsecutiveFailures": 3
    }],
    "labels": {
        "HAPROXY_GROUP": "external",
        "HAPROXY_0_VHOST": "{{networking.virtual-host}}",
        "HAPROXY_0_REDIRECT_TO_HTTPS": "{{networking.https-redirect}}",
        "HAPROXY_0_FRONTEND_HEAD": "",
        "HAPROXY_0_FRONTEND_BACKEND_GLUE": "",
        "HAPROXY_0_ENABLED":"true",
        "MARATHON_SINGLE_INSTANCE_APP": "true"
    },
    "fetch": [
    ],

    "upgradeStrategy": {
       "maximumOverCapacity": 0,
       "minimumHealthCapacity": 0
    }
}
