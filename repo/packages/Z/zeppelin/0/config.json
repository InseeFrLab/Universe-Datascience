{
  "type": "object",
  "required": ["service"],
  "properties": {
    "service": {
      "description": "Configuration properties for the pdAdmin service for DC/OS.",
      "required": ["name", "cpus", "mem"],
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the service to display in the DC/OS dashboard.",
          "type": "string",
          "default": "zeppelin",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "appID",
            "scope": "zeppelin"
          }
        },
        "cpus": {
          "description": "CPU shares to allocate to this zeppelin instance.",
          "type": "number",
          "default": 0.1,
          "minimum": 0.1
        },
        "mem": {
          "description": "Memory (in MB) to allocate to this zeppelin instance.",
          "type": "number",
          "default": 4096,
          "minimum": 2048
        }
      }
    },
    "zeppelin": {
      "description": "Zeppelin specific configuration",
      "type": "object",
      "properties": {
        "username": {
          "description": "Zeppelin user name.",
          "type": "string",
          "default": "admin",
          "x-form": {
            "value": "{{user.idep}}"
          }
        },
        "password": {
          "description": "Zeppelin password.",
          "type": "string",
          "default": "changeme",
          "x-form": {
            "value": "{{user.password}}"
          }
        }
      }
    },
    "script": {
      "type": "object",
      "description": "scripts",
      "properties": {
        "uri": {
          "type": "string",
          "description": "uri of a .sh file that will be executed at runtime",
          "default": ""
        }
      }
    },
    "init": {
      "description": "Init parameters",
      "type": "object",
      "properties": {
        "global": {
          "type": "string",
          "description": "initialization script",
          "default": "",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "initScript",
            "scope": "zeppelin"
          }
        }
      }
    },
    "vault": {
      "description": "Configuration of vault client",
      "type": "object",
      "properties": {
        "token": {
          "description": "token vault",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_TOKEN}}"
          }
        },
        "url": {
          "description": "url of vault server",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_ADDR}}"
          }
        },
        "mount": {
          "description": "mount of the v2 secret engine",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_MOUNT}}"
          }
        },
        "directory": {
          "description": "top level directory",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_TOP_DIR}}"
          }
        },
        "secret": {
          "description": "the path of the secret to convert into a list of environment variables",
          "type": "string",
          "default": ""
        }
      }
    },
    "s3": {
      "description": "Configuration of temporary identity",
      "type": "object",
      "properties": {
        "accessKeyId": {
          "description": "AWS Access Key",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_ACCESS_KEY_ID}}"
          }
        },
        "endpoint": {
          "description": "AWS S3 Endpoint",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_S3_ENDPOINT}}"
          }
        },
        "defaultRegion": {
          "description": "AWS S3 default region",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_DEFAULT_REGION}}"
          }
        },
        "secretAccessKey": {
          "description": "AWS S3 secret access key",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_SECRET_ACCESS_KEY}}"
          }
        },
        "sessionToken": {
          "description": "AWS S3 session Token",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_SESSION_TOKEN}}"
          }
        },
        "bucketName": {
          "description": "AWS S3 bucket name",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_BUCKET_NAME}}"
          }
        },
        "expiration": {
          "description": "Temporary identity expiration date",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_EXPIRATION}}"
          }
        }
      }
    },
    "networking": {
      "description": "Networking-related configuration properties for pgAdmin on DC/OS.",
      "type": "object",
      "properties": {        
        "network-name": {
          "description": "Name of the container network to use",
          "type": "string",
          "default": "dcos",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "containerNetworkName",
            "scope": "zeppelin"
          }
        }, 
        "virtual-host": {
          "description": "The virtual host address to configure for integration with Marathon-lb.",
          "type": "string",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "externalDNS",
            "scope": "zeppelin",
            "name": "ihm"
          }
        },
        "https-redirect": {
          "description": "Whether Marathon-lb should redirect HTTP traffic to HTTPS. This requires 'virtual-host' to be set. By default, this is false.",
          "type": "boolean",
          "default": true
        },
        "whitelist": {
          "type": "object",
          "description": "IP protection",
          "properties": {
            "enable": {
              "type": "boolean",
              "title": "Enable IP protection",
              "description": "Only the configured set of IPs will be able to reach the service",
              "default": true
            },
            "ip": {
              "type": "string",
              "description": "the white list of IP is whitespace",
              "title": "Whitelist of IP",
              "x-form": {
                "value": "{{user.ip}}"
              }
            }
          }
        }
      }
    }
  }
}
