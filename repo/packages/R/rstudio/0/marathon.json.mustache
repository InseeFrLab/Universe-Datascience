{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "instances": 1,
  "cmd": "echo \"AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID\\nAWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY\\nAWS_SESSION_TOKEN=$AWS_SESSION_TOKEN\\nAWS_DEFAULT_REGION=$AWS_DEFAULT_REGION\\nAWS_S3_ENDPOINT=$AWS_S3_ENDPOINT\\nAWS_EXPIRATION=$AWS_EXPIRATION\" >> /usr/local/lib/R/etc/Renviron.site && {{#script.uri}} runuser -m -l rstudio -c 'sh /mnt/mesos/sandbox/*.sh' && {{/script.uri}} /init",
  "env": {
    "AWS_ACCESS_KEY_ID" : "{{s3.accessKeyId}}",
    "AWS_S3_ENDPOINT" : "{{s3.endpoint}}",
    "AWS_DEFAULT_REGION" : "{{s3.defaultRegion}}",
    "AWS_SECRET_ACCESS_KEY" : "{{s3.secretAccessKey}}",
    "AWS_SESSION_TOKEN" : "{{s3.sessionToken}}",
    "AWS_EXPIRATION" : "{{s3.expiration}}",
    "GIT_USER_NAME": "{{git.name}}",
    "GIT_USER_MAIL": "{{git.email}}",
    "GIT_CREDENTIALS_CACHE_DURATION": "{{git.cache}}",
    {{#rstudio.password}}
      "PASSWORD": "{{rstudio.password}}"
    {{/rstudio.password}}
    {{^rstudio.password}}
      "DISABLE_AUTH": "true"
    {{/rstudio.password}}
  },
  "container": {
       "type": "DOCKER",
       "docker": {
           "image": "{{resource.assets.container.docker.image}}",
           "network": "BRIDGE",
           "portMappings": [
              { "containerPort": 8787, "hostPort": 0 }
          ]
       }
   },
   "healthChecks": [
    {
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "gracePeriodSeconds": 30,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"{{networking.virtual-host}}",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "{{networking.https-redirect}}",
    "HAPROXY_0_ENABLED":"true",
    "HAPROXY_0_FRONTEND_HEAD":"",
    "HAPROXY_0_FRONTEND_BACKEND_GLUE":"",
    {{#networking.whitelist.enable}}
    "HAPROXY_0_BACKEND_NETWORK_ALLOWED_ACL": "{{networking.whitelist.ip}}",
    {{/networking.whitelist.enable}}    
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  },
  "fetch": [
    {{#script.uri}}
    {
      "uri": "{{script.uri}}",
      "extract": false,
      "executable": true,
      "cache": false
  }
  {{/script.uri}}
  ],
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
