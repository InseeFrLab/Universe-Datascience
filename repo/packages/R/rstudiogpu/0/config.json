{
  "type": "object",
  "properties": {
    "service": {
      "description": "Configuration properties for the RStudio service for DC/OS.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the service to display in the DC/OS dashboard.",
          "type": "string",
          "default": "rstudiogpu",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "appID",
            "scope": "rstudiogpu"
          }
        },
        "cpus": {
          "description": "CPU shares to allocate to this RStudio instance.",
          "type": "number",
          "default": 0.1,
          "minimum": 0.1
        },
        "mem": {
          "description": "Memory (in MB) to allocate to this RStudio instance.",
          "type": "number",
          "default": 2048,
          "minimum": 1024
        },
        "gpus": {
          "description": "GPU to allocate to this marathon instance.",
          "type": "number",
          "default": 0,
          "minimum": 0
        }
      },
      "required": ["name", "cpus", "mem"]
    },
    "rstudio": {
      "description": "RStudio specific configuration",
      "type": "object",
      "properties": {
        "password": {
          "type": "string",
          "description": "Password",
          "default": "changeme",
          "x-form": {
            "value": "{{user.password}}"
          }
        },
        "spark-ui": {
          "type": "boolean",
          "title": "Enable spark-ui",
          "description": "Enable access to the spark-ui driver ihm",
          "default": false
        }
      }
    },
    "script": {
      "type": "object",
      "description": "scripts",
      "properties": {
        "uri": {
          "type": "string",
          "description": "uri of a .sh file that will be executed at runtime",
          "default": ""
        }
      }
    },
    "init": {
      "description": "Init parameters",
      "type": "object",
      "properties": {
        "global": {
          "type": "string",
          "description": "initialization script",
          "default": "",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "initScript",
            "scope": "rstudiogpu"
          }
        }
      }
    },
    "networking": {
      "description": "Networking-related configuration properties for RStudio on DC/OS.",
      "type": "object",
      "properties": {
        "network-name": {
          "description": "Name of the container network to use",
          "type": "string",
          "default": "dcos",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "containerNetworkName",
            "scope": "rstudiogpu"
          }
        },
        "virtual-host": {
          "description": "The virtual host address to configure for integration with Marathon-lb.",
          "type": "string",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "externalDNS",
            "scope": "rstudiogpu",
            "name": "ihm"
          }
        },
        "virtual-host-sparkui": {
          "description": "The virtual host address to configure for integration with Marathon-lb for port 1.",
          "type": "string",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "externalDNS",
            "scope": "rstudiogpu",
            "name": "spark-ui"
          }
        },
        "https-redirect": {
          "description": "Whether Marathon-lb should redirect HTTP traffic to HTTPS. This requires 'virtual-host' to be set. By default, this is false.",
          "type": "boolean",
          "default": true
        },
        "whitelist": {
          "type": "object",
          "description": "IP protection",
          "properties": {
            "enable": {
              "type": "boolean",
              "title": "Enable IP protection",
              "description": "Only the configured set of IPs will be able to reach the service",
              "default": true
            },
            "ip": {
              "type": "string",
              "description": "the white list of IP is whitespace",
              "title": "Whitelist of IP",
              "x-form": {
                "value": "{{user.ip}}"
              }
            }
          }
        }
      },
      "required": ["virtual-host", "https-redirect"]
    },
    "git": {
      "description": "Git user configuration",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "user name for git",
          "default": "",
          "x-form": {
            "value": "{{git.name}}",
            "readonly": true
          }
        },
        "email": {
          "type": "string",
          "description": "user email for git",
          "default": "",
          "x-form": {
            "value": "{{git.email}}",
            "readonly": true
          }
        },
        "cache": {
          "type": "string",
          "description": "duration in seconds of the credentials cache duration",
          "default": "",
          "x-form": {
            "value": "{{git.credentials_cache_duration}}",
            "readonly": false
          }
        }
      }
    },
    "vault": {
      "description": "Configuration of vault client",
      "type": "object",
      "properties": {
        "token": {
          "description": "token vault",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_TOKEN}}"
          }
        },
        "url": {
          "description": "url of vault server",
          "type": "string",
          "x-form": {
            "value": "{{vault.VAULT_ADDR}}"
          }
        }
      }
    },
    "s3": {
      "description": "Configuration of temporary identity",
      "type": "object",
      "properties": {
        "accessKeyId": {
          "description": "AWS Access Key",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_ACCESS_KEY_ID}}"
          }
        },
        "endpoint": {
          "description": "AWS S3 Endpoint",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_S3_ENDPOINT}}"
          }
        },
        "defaultRegion": {
          "description": "AWS S3 default region",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_DEFAULT_REGION}}"
          }
        },
        "secretAccessKey": {
          "description": "AWS S3 secret access key",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_SECRET_ACCESS_KEY}}"
          }
        },
        "sessionToken": {
          "description": "AWS S3 session Token",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_SESSION_TOKEN}}"
          }
        },
        "expiration": {
          "description": "Temporary identity expiration date",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_EXPIRATION}}"
          }
        }
      }
    }
  },
  "required": ["service", "rstudio", "networking"]
}
