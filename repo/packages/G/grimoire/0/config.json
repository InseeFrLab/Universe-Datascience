{
  "type": "object",
  "properties": {
    "service": {
      "description": "Configuration properties for the FuncampR Grimoire service.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the service to display in the DC/OS dashboard.",
          "type": "string",
          "default": "grimoire",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "appID",
            "scope": "grimoire"
          }
        },
        "cpus": {
          "description": "CPU shares to allocate to this instance.",
          "type": "number",
          "default": 0.1,
          "minimum": 0.1
        },
        "mem": {
          "description": "Memory (in MB) to allocate to this instance.",
          "type": "number",
          "default": 2048,
          "minimum": 1024
        }
      },
      "required": ["name", "cpus", "mem"]
    },
    "vscode": {
      "description": "Grimoire specific configuration",
      "type": "object",
      "properties": {
        "password": {
          "type": "string",
          "description": "Password",
          "default": "changeme",
          "x-form": {
            "value": "{{user.password}}"
          }
        },
        "image": {
          "type": "string",
          "description": "Version of grimoire to use",
          "default": "git-registry.lab.sspcloud.fr/lxwgkb/funcamp-r-grimoire",
          "enum": ["git-registry.lab.sspcloud.fr/lxwgkb/funcamp-r-grimoire", "InseeFrLab/funcampR"]
        }
      }
    },
    "networking": {
      "description": "Networking-related configuration",
      "type": "string",
      "properties": {
        "virtual-host": {
          "type": "string",
          "description": "Virtual host to expose on",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "externalDNS",
            "scope": "grimoire",
            "name": "ihm"
          }
        },
        "whitelist": {
          "type": "object",
          "description": "IP protection",
          "properties": {
            "enable": {
              "type": "boolean",
              "title": "Enable IP protection",
              "description": "Only the configured set of IPs will be able to reach the service",
              "default": true
            },
            "ip": {
              "type": "string",
              "description": "the white list of IP is whitespace",
              "title": "Whitelist of IP",
              "x-form": {
                "value": "{{user.ip}}"
              }
            }
          }
        }

      }
    },
    "git": {
      "description": "Git user configuration",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "user name for git",
          "default": "",
          "x-form": {
            "value": "{{git.name}}",
            "readonly": true
          }
        },
        "email": {
          "type": "string",
          "description": "user email for git",
          "default": "",
          "x-form": {
            "value": "{{git.email}}",
            "readonly": true
          }
        },
        "cache": {
          "type": "string",
          "description": "duration in seconds of the credentials cache duration",
          "default": "",
          "x-form": {
            "value": "{{git.credentials_cache_duration}}",
            "readonly": false
          }
        }
      }
    }
  },
  "required": ["service", "grimoire", "git"]
}
