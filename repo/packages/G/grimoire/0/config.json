{
  "type": "object",
  "properties": {
    "service": {
      "description": "Configuration properties for the FuncampR Grimoire service.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of the service to display in the DC/OS dashboard.",
          "type": "string",
          "default": "grimoire",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "appID",
            "scope": "grimoire"
          }
        },
        "cpus": {
          "description": "CPU shares to allocate to this instance.",
          "type": "number",
          "default": 0.1,
          "minimum": 0.1
        },
        "mem": {
          "description": "Memory (in MB) to allocate to this instance.",
          "type": "number",
          "default": 2048,
          "minimum": 1024
        }
      },
      "required": ["name", "cpus", "mem"]
    },
    "grimoire": {
      "description": "Configuration du grimoire",
      "type": "string",
      "properties": {
        "chapitre": {
          "type": "string",
          "description": "Chapitre",
          "default": "chapitre1",
          "enum": ["chapitre1","chapitre2","chapitre3","chapitre4","chapitre5","chapitre6","chapitre7","chapitre8","chapitre9","chapitre10","chapitre11","chapitre12","chapitre13"]
        }
      }
    },
    "networking": {
      "description": "Networking-related configuration",
      "type": "string",
      "properties": {
        "virtual-host": {
          "type": "string",
          "description": "Virtual host to expose on",
          "x-form": {
            "hidden": true
          },
          "x-generated": {
            "type": "externalDNS",
            "scope": "grimoire",
            "name": "ihm"
          }
        },
        "whitelist": {
          "type": "object",
          "description": "IP protection",
          "properties": {
            "enable": {
              "type": "boolean",
              "title": "Enable IP protection",
              "description": "Only the configured set of IPs will be able to reach the service",
              "default": true
            },
            "ip": {
              "type": "string",
              "description": "the white list of IP is whitespace",
              "title": "Whitelist of IP",
              "x-form": {
                "value": "{{user.ip}}"
              }
            }
          }
        }
      }
    }
  },
  "required": ["service"]
}
