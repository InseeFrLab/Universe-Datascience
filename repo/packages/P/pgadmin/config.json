{
  "type": "object",
  "properties": {
    "service": {
      "description": "Configuration properties for the RStudio service for DC/OS.",
      "type": "object",
      "required": ["name", "cpus", "mem"],
      "properties": {
        "name": {
          "description": "The name of the service to display in the DC/OS dashboard.",
          "type": "string",
          "default": "pgadmin",
          "api-defined": true,
          "js-control": "shadow",
          "api-control": "strict",
          "api-default": "/users/[$IDEP]/pgadmin-[$UUID]"
        },
        "cpus": {
          "description": "CPU shares to allocate to this RStudio instance.",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1
        },
        "mem": {
          "description": "Memory (in MB) to allocate to this RStudio instance.",
          "type": "number",
          "default": 512
        },
        "uri": {
          "description": "Files could be on an archive root",
          "title": "file Url you want to import",
          "type": "string",
          "media": {
            "type": "csv"
          }
        },
        "dns": {
          "description": "dns name",
          "type": "string",
          "default": "change.me",
          "api-defined": true,
          "js-control": "shadow",
          "api-control": "strict",
          "api-default": "[$IDEP]-pgadmin-[$UUID].[$STATUS].[$DNS]"
        }
      }
    }
  }
}
