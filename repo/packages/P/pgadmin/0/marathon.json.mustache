{
    "id": "{{service.name}}",
    "cpus": {{service.cpus}},
    "mem":  {{service.mem}},
    "instances": 1,
    "container": {
        "type": "DOCKER",            
        "portMappings": [
                {"containerPort": 80, "name":"pgadmin" }
            ],
        "docker": {
            "image": "{{resource.assets.container.docker.image}}",

        }
    },
    "network-name": {
        "description": "Name of the container network to use",
        "type": "string",
        "default": "dcos",
        "x-form": {
            "hidden": true
        },
        "x-generated": {
            "type": "containerNetworkName",
            "scope": "pgadmin"
          }
        },
    "healthChecks": [
        {
            "protocol": "MESOS_TCP",
            "gracePeriodSeconds": 300,
            "intervalSeconds": 60,
            "portIndex": 0,
            "timeoutSeconds": 15,
            "maxConsecutiveFailures": 3
        }
    ],
    "fetch": [
        {{#service.uri}}
            {
                "uri": "{{service.uri}}",
                "extract": true,
                "executable": false,
                "cache": false
            }
        {{/service.uri}}
    ],
    "labels": {
        "HAPROXY_GROUP": "external",
        "HAPROXY_0_ENABLED": "true",
        "HAPROXY_0_VHOST":"{{networking.virtual-host}}",
        "HAPROXY_0_REDIRECT_TO_HTTPS": "{{networking.https-redirect}}",
        "HAPROXY_0_FRONTEND_HEAD": "",
        "HAPROXY_0_FRONTEND_BACKEND_GLUE": "",
        {{#networking.whitelist.enable}}
            "HAPROXY_0_BACKEND_NETWORK_ALLOWED_ACL": "{{networking.whitelist.ip}}",
        {{/networking.whitelist.enable}} 
        "MARATHON_SINGLE_INSTANCE_APP": "true"
    },
    "upgradeStrategy": {
       "maximumOverCapacity": 0,
       "minimumHealthCapacity": 0
    },
    "env": {

        "PGADMIN_DEFAULT_EMAIL" : "{{pgadmin.email}}",
        "PGADMIN_DEFAULT_PASSWORD" : "{{pgadmin.password}}",
        "PGADMIN_CONFIG_LOGIN_BANNER": "\"You need to login with your email\"",
        "PGADMIN_CONFIG_ENHANCED_COOKIE_PROTECTION": "True"
  }
}